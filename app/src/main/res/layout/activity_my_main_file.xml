<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".My_main_file">


    <Toolbar
        android:id="@+id/tbTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orgBlue">

        <include layout="@layout/toolbar_explore" />
    </Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/my"
        android:elevation="12dp"
        app:tabIndicatorColor="@color/lightGrey"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/lightGrey">


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>